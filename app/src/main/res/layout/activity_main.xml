<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="172dp"
        android:layout_height="138dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/imgProyecto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="143dp"
        android:layout_height="45dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:text="@string/proyecto"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/user"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/password"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUser"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/botones"
        android:gravity="center"
        android:text="@string/iniSesion"
        android:onClick="inciarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPass" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/botones"
        android:gravity="center"
        android:onClick="abrirRegistro"
        android:text="@string/registrate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" />

    <ImageButton
        android:id="@+id/imgGoogleMaps"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imgGoogleMaps"
        android:saveEnabled="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/imgFacebook"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgFacebook"
        app:srcCompat="@drawable/google_maps" />

    <ImageButton
        android:id="@+id/imgFacebook"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/imgFacebook"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/imgInstagram"
        app:layout_constraintTop_toTopOf="@+id/imgInstagram"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/imgInstagram"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@string/imgInstagram"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/imgGmail"
        app:layout_constraintTop_toTopOf="@+id/imgGmail"
        app:srcCompat="@drawable/instagram" />

    <ImageButton
        android:id="@+id/imgGmail"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="52dp"
        android:contentDescription="@string/imgGmail"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrar"
        app:srcCompat="@drawable/gmail" />
</androidx.constraintlayout.widget.ConstraintLayout>