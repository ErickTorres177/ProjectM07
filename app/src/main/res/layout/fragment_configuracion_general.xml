<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavegationDrawer"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnEEUU"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:onClick="btnCambiarEEUU"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/btnCastellano"
        app:layout_constraintTop_toTopOf="@+id/btnCastellano"
        app:srcCompat="@drawable/img_eeuu" />

    <TextView
        android:id="@+id/tituloCambiarIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tituloCambiarIdioma"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnCastellano"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:onClick="btnCambiarCastellano"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/btnCatalan"
        app:layout_constraintTop_toTopOf="@+id/btnCatalan"
        app:srcCompat="@drawable/img_castellano" />

    <ImageButton
        android:id="@+id/btnCatalan"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        android:onClick="btnCambiarCatalan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloCatalan"
        app:srcCompat="@drawable/img_catalan" />

    <TextView
        android:id="@+id/tvTituloCatalan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/tvTituloCatalan"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloCambiarIdioma" />

    <TextView
        android:id="@+id/tvTituloIngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/tvTituloEEUU"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toEndOf="@+id/tvTituloCastellano"
        app:layout_constraintTop_toTopOf="@+id/tvTituloCastellano" />

    <TextView
        android:id="@+id/tvTituloCastellano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/tvTituloCastellano"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textCursorDrawable="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tvTituloCatalan"
        app:layout_constraintTop_toTopOf="@+id/tvTituloCatalan" />

</androidx.constraintlayout.widget.ConstraintLayout>