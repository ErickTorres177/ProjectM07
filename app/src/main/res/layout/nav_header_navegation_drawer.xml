<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:id="@+id/nav_view_encabezado"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="123dp"
        android:layout_height="103dp"
        android:layout_gravity="center_horizontal|top|center_vertical"
        android:contentDescription="@string/nav_header_desc"
        android:minWidth="102dp"
        android:minHeight="79dp"
        android:paddingLeft="4dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingRight="4dp"
        android:paddingBottom="8dp"
        app:srcCompat="@mipmap/user" />

    <TextView
        android:id="@+id/tvNombreUsuarioCurrent"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tvUsuarioCurrent"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textColorHint="@color/white"
        android:textColorLink="@color/white"
        android:textSize="22sp" />

</LinearLayout>
